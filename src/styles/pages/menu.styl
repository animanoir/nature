.menu
	
	height 50px
	position absolute
	overflow hidden
	width 1150px

	.open
		position absolute
		width 100%

	.open .arrow
		width 22px
		height 15px
		background url("img/arrow-down.png") no-repeat top left
		left 50%
		margin-left -(@width / 2)
		position absolute
		top 10px
		cursor pointer

	ul.nav
		display block
		position absolute


	ul li
		float left
		margin-right 10px

	ul li a
		font-family Arial
		font-weight bold
		font-size 12px
		height 19px
		background-color #fff
		border-radius 20px
		text-align center
		padding-top 6px
		text-decoration none
		color #000
		width 25px
		display block
		position relative
		top 100px

	ul li a .dot
		width 1px
		height 1px
		background-color #000
		position absolute
		top 50%
		left 50%
		margin-left -1px
