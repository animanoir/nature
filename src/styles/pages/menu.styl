.menu

  height 33px
  position absolute
  width 117px
  z-index 1000
  display none
  left 50%
  transform translateX(-50%)
  bottom 0

  .bt-menu
    width 38px
    height 33px
    background-color #fff
    display block
    float left
    text-decoration none
    transform translate3d(0,100%,0)
    transition transform 0.5s cubic-bezier(0.19, 1, 0.22, 1)

  .bt-prev, .bt-next
    text-indent -9999px

  .bt-prev
    background #fff url("/img/arrow-left.png") no-repeat top left
    background-size 7px
    background-position 15px 10px

  .bt-next
    background-image url("/img/arrow-right.png")
    background-repeat no-repeat
    background-size 7px
    background-position 15px 10px

  .bt-info
    text-align center
    border-left 1px solid #aaa
    border-right 1px solid #aaa
    padding-top 10px
    height 23px
    font-family "GothamLight"
    font-size 18px
    color #000
    transition-delay 0.05s

  .bt-next
    transition-delay 0.07s

.blur
  -webkit-transition: filter 1s ease-in-out;
  -moz-transition: filter 1s ease-in-out;
  -o-transition: filter 1s ease-in-out;
  -ms-transition: filter 1s ease-in-out;
  transition: filter 1s ease-in-out;
  -webkit-filter: blur(3px);

.menu.in
  .bt-menu
    transform translate3d(0,0,0)
