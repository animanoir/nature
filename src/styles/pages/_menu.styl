.menu
	
	height 50px
	position absolute
	bottom 50px

	ul li
		float left
		margin-right 10px

	ul li a
		font-family Arial
		font-weight bold
		font-size 12px
		height 19px
		background-color main_color
		border-radius 20px
		text-align center
		padding-top 6px
		text-decoration none
		color #000
		width 25px
		display block
		position relative

	ul li a .dot
		width 1px
		height 1px
		background-color #000
		position absolute
		top 50%
		left 50%
		margin-left -1px
