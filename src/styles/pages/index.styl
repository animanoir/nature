@import "../shared/_reset"
@import "../shared/_fonts"
@import "../shared/_global"

.wrapper
  width 1150px
  position relative
  margin 0 auto
  min-height 600px
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;

.border
  position absolute
  width 100%
  height 100%
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  z-index 10
  pointer-events none
  left 0
  right 0
  bottom 0
  top 0
  margin auto

.pages

  .header
    text-align center

  .logo-labs
    position relative
    margin 0 auto
    top 50px
    display none
    z-index 1000

  .bold_line, .thin_line
    display none
    width 50px
    height 4px
    position relative
    margin 0 auto
    margin-top 20px
    background-color main_color

  .thin_line
    height 1px
    margin-top 15px

  .title, .description
    display block
    font-family 'CourierRegular'
    color main_color
    font-size 10px
    text-align center
    bottom 220px
    position absolute
    left 50%
    transform translateX(-50%)
    line-height 150%
    text-transform uppercase
    letter-spacing 0.5px
    z-index 2
    word-break: break-word;
    line-height: 1.636;
    max-width: 200px;

  .description
    bottom 170px
    height 30px

  #container
    position absolute
    width 100%
    height 100%

  #transition
    position absolute
    width 100%
    height 100%

  canvas
    position relative
    margin-left auto
    margin-right auto
    display block
    opacity 0

  canvas.tween
    transition opacity 0.5s
    opacity 1
